<section class="grid grid-cols-[500px_500px] grid-rows-[350px_350px_350px_350px]  gap-20">
  {
    PROJECTS.map(({image, title, description, tags, github, link}) => (
      <article class="bg-cover" style="background-image: url('project1.png');">
        <div class="bg-black bg-opacity-55 px-10 pt-32 pb-4 flex flex-wrap flex-col">
          <h1 class="text-yellow-300 text-2xl mb-5 transform translate-y-10">
            {title}
          </h1>

          <ul class="flex flex-row mt-6 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span class="opacity-80 bg-gray-800 text-gray-200 flex gap-x-2 rounded-full text-xs py-1 px-2">
                  <tag.icon class="size-4" />
